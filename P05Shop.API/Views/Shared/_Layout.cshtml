<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/P05Shop.API.styles.css"/>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Book Shop</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="@Url.Action("Index", "Book")">Home</a></li>
                <li><a href="@Url.Action("AddBook", "Book")">Add</a></li>
                <li><a href="@Url.Action("UpdateBook", "Book")">Update</a></li>
                <li><a href="@Url.Action("DeleteBook", "Book")">Delete</a></li>
                <li><a href="@Url.Action("BookForm", "Book")">Get</a></li>
            </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>